@model LoginVM
@{
    ViewData["Title"] = "Login";
}


<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col">
                        <div>
                            <h1 class="mb-5">Login</h1>
                            <p class="mb-30">Don't have an account? <a asp-action=Register>Create here</a></p>
                        </div>
                        <form method="post" class="pb-5">

                            <div class="form-group mt-2">
                                <input asp-for=Login placeholder="Login" />
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for=Password placeholder="Password" />
                            </div>
                            <div asp-validation-summary=ModelOnly class="">

                            </div>
                            <div class="form-group mb-50 mt-2">
                                <div>
                                    <div class="custom-checkbox ">
                                        <input class="form-check-input " asp-for=RememberMe />
                                        <label class="form-check-label" asp-for=RememberMe><span>Remember me</span></label>
                                    </div>
                                </div>
                                <a class="text-muted">Forgot password?</a>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-outline-primary">Log in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

