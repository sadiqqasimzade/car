@model RegisterVM
@{
    ViewData["Title"] = "Register";
}
<div class="page-content pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xl-8 col-lg-10 col-md-12 m-auto">
                <div class="row">
                    <div class="col">
                        <div>
                            <h1 class="mb-5">Register</h1>
                            <p class="mb-30">have an account? <a asp-action="Login">Log In</a></p>
                        </div>
                        <form method="post" class="pb-5">
                            <div class="form-group mt-2">
                                <input asp-for="Login" placeholder="Username" />
                                <span class="text-danger" asp-validation-for="Login"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="Password" placeholder="Password" />
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>
                            <div class="form-group mt-2">
                                <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>
                            <div asp-validation-summary=ModelOnly></div>
                            <div class="form-group mt-2">
                                <button type="submit" class="btn btn-outline-primary">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <partial name="~/Areas/Manage/Views/Shared/_ValidationScriptsPartial.cshtml" />
}
